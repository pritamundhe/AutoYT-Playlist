# Application
APP_NAME="YouTube Playlist Generator"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/youtube_playlist
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=86400

# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_API_QUOTA_LIMIT=10000
YOUTUBE_CACHE_TTL=86400

# NLP Models
SENTENCE_TRANSFORMER_MODEL=sentence-transformers/all-MiniLM-L6-v2
SPACY_MODEL=en_core_web_sm

# Ranking Weights (default)
WEIGHT_VIEWS=0.15
WEIGHT_LIKES=0.20
WEIGHT_SUBSCRIBERS=0.10
WEIGHT_RELEVANCE=0.40
WEIGHT_RECENCY=0.10
WEIGHT_DURATION_PENALTY=0.05

# ML Models
USE_ML_RANKING=True
ML_MODEL_PATH=ml_models/ranking/xgboost_ranker.json

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=pdf,docx,txt

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
